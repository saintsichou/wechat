/* pages/list_edit/list_edit.wxss */
.content-desc{
  background: #fff;
  
}
.desc-item{
  height: 100rpx;
  position: relative;
  padding-left: 300rpx;
  padding-right: 30rpx;
  font-size: 28rpx;
  color: #252D3A;
  border-bottom: 2rpx solid #ececec;
}
.desc-item:nth-last-child(1){
  border-bottom: 0;
}
.item-label{
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}
.item-label2 .picker{
  /* position: absolute;
  left: 30rpx;
  top: 50%; */
  height: 100rpx;
  text-align: right;
  line-height: 100rpx;
} 
.desc-item input{
  height: 100rpx;
  text-align: right;
}
.title{
  background: rgb(249,249,249);
  line-height: 88rpx;
  padding-left: 30rpx;
  color: #888B96;
  font-size: 28rpx;
}

.add-btn{
    position: fixed;
    width: 100%;
    bottom: 0;
    background: #f36f56;
    color: #fff;
    line-height: 98rpx;
    font-size: 28rpx;
    text-align: center;
}
.add-btn button{
  width: 100%;
  outline: none;
  border:none;
}
.edit-btn{
	display: flex;
}
.edit-btn view{
  flex: 1;
  text-align: center;
}
.edit-del{
  background: #f36f56;
  color: #fff;
}
.edit-sub{
  background: #4D89FF;
  color: #fff;
}
.uploader-container {
  width: 100%;
  height: 400rpx;
  padding: 20rpx 20rpx 20rpx 0;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.kf_button{
  background-color: rgba(255, 255, 255, 0);
  border: 0px;
  height: 100rpx;
  right: 0rpx;
  bottom: 200rpx;
  position: fixed;
  border-radius: 50%;
}
.kf_button::after{
  border: 0px;
}
.kf_image{
  z-index: 9999;
  width: 88rpx;
  height: 88rpx;
}