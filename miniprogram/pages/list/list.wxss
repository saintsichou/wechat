/* pages/list/list.wxss */
.check-list{
  min-height: 100vh;
}
.info_block {
  padding-bottom: 100rpx;
}
.item {
  margin-top: 24rpx;
  background: #fff;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.item_content2{
  display: flex;
  align-items: center;
}
.arrow2{
  padding-left:24rpx;
  font-size:30rpx;
  color:#808080;
}
.item:last-child {
  border-bottom: none;
}
.item_content {
  display: flex;
  font-size: 28rpx;
  align-items: center;
  padding:10rpx 5rpx;
}
.id,.text,.phone,.xuhao {
  margin-right: 20rpx;
}
.add-btn{
  position: fixed;
  width: 100%;
  bottom: 0;
  background: #4D89FF;
  color: #fff;
  line-height: 98rpx;
  font-size: 28rpx;
  text-align: center;
}

.check-content{
  padding-bottom:90rpx;
}
.bottom_reach{
  width: 100%;
  height: 120rpx;
}
.check-img{
  width: 90rpx;
  height: 90rpx;
  border: 2rpx dashed #888888;
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
}
.check-img>image{
  display: block;
  width: 100%;
  height: 100%;
}
.check-intro{
  margin-bottom: 10rpx;
}
.check-label{
  display: flex;
  display: -webkit-flex;
  flex-wrap: wrap;
 
}
.check-label > view {
  text-align: center;
  font-size: 22rpx;
}
.check-price{
  font-size: 24rpx;
  color: #808080;
  position: relative;
}
.check-num{
  color: #FF7B0A;
  font-size: 22rpx;
}
.check-num text{
  font-size: 26rpx;
}
.check-sales{
  position: absolute;
  right: 0;
  top: 50%;
  padding:5rpx 10rpx;
  line-height:48rpx;
  /* background:rgba(77,137,255,1); */
  /* border-radius:30rpx; */
  transform: translateY(-50%);
  color:#ccc;
  text-align: center;
  font-size: 22rpx;
}
.check-right{
    color: #252D3A;
    font-size: 26rpx;
}
.check-item{
  padding: 10rpx 28rpx 16rpx 138rpx;
  position: relative;
  background: #fff;
}
.blue {
color: #036eb8;
background: #e5f0f8;
}
.green {
color: #A7AAB8;
font-size: 22rpx;
}
.myid{
  color:#4D89FF;
}
.none_data{
  text-align: center;
}



.search-box{
  position: relative;
}
.search-input.no-padding{
  padding-right: 0;
}
.search-cancel{
  position: absolute;
  top: 50%;
  right: 10rpx;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #4D89FF;
}
.search-input input{
  display: block;
  height: 100%;
  border-radius: 32rpx;
  padding-left: 78rpx;
  background: #f5f5f5;
  color: #252D3A;
} 
.search-input image{
  margin-left: 30rpx;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}
.search-input{
  position: relative;
  padding-right: 86rpx;
  position: relative;
  height: 60rpx;
}
.search-box{
  background: #fff;
  padding: 10rpx 20rpx;
}