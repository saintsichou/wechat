}
.news{
  width:100%;
  height: 100rpx;
}
.newsFlex{
  width:2rpx;
  height:24rpx;
  float: left;
  border: 1px solid #ECECEC;
  margin: 35rpx 0rpx;
}
.newsIcon{
  width:54rpx;
  height:30rpx;
  border-radius:4rpx;
  text-align: center;
  border:1rpx solid rgba(255,123,10,1);
  font-size:20rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,123,10,1);
  line-height:28rpx;
  float: left;
  margin: 35rpx 15rpx;
}
.newsContent{
  width: 416rpx;
  height: 37rpx;
  float: left;
  color:#A7AAB8;
  overflow: hidden;
  margin: 35rpx 15rpx;
}
.arrow{
  width:36rpx;
  height:36rpx;
  float: left;
  margin: 35rpx 15rpx;
}
.news-title{
  font-size: 22rpx;
  padding:0 2rpx;
}