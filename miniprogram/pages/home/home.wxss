}
.wrapper{
  display: grid;
  grid-template-columns: 240rpx 240rpx 240rpx;
  grid-template-rows: 220rpx 220rpx 220rpx;
  border-radius: 15rpx;
  position: absolute;
  left:20rpx;
  /* box-shadow: #999 */
}
